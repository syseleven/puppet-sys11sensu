  "uchiwa": {
    "port": <%= @uchiwa_port %>,
    "stats": 10,
<% if uchiwa_admin_password or uchiwa_guest_password -%>
    "users": [
    <% if uchiwa_admin_password -%>
      {
        "username" : "<%= @uchiwa_admin_user %>",
        "password": "<%= @uchiwa_admin_password %>",
