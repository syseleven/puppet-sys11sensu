{
  "sensu": [
    {
    "name": "<%= @site_name %>",
      "host": "127.0.0.1",
      "port": 4567,
      "ssl": false,
      "path": "",
      "user": "",
      "pass": "",
      "timeout": 5
    }
  ],
  "uchiwa": {
    "port": <%= @uchiwa_port %>,
    "stats": 10,
<% if @uchiwa_admin_password != nil or @uchiwa_guest_password != nil -%>
    "users": [
    <% if @uchiwa_admin_password != nil -%>
      {
        "username" : "<%= @uchiwa_admin_user %>",
        "password": "<%= @uchiwa_admin_password %>",
        "role": {
          "readonly": false
        }
      }<%- if @uchiwa_admin_password != nil and @uchiwa_guest_password != nil -%>,<%- end -%>
    <% end -%>
    <% if @uchiwa_guest_password != nil -%>
      {
        "username" : "<%= @uchiwa_guest_user %>",
        "password": "<%= @uchiwa_guest_password %>",
        "role": {
          "readonly": true
        }
      }
    <% end %>
    ],
<% end -%>
    "refresh": 10000
  }
}
