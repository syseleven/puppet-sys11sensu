{
  "sensu": [
    {
      "name": "<%= site_name %>",
      "host": "<%= uchiwa_site_host %>",
      "port": <%= uchiwa_site_port %>,
      "ssl": <%= uchiwa_site_ssl %>,
      "path": "<%= uchiwa_site_path %>",
      "user": "<%= uchiwa_site_user %>",
      "pass": "<%= uchiwa_site_pass %>",
      "timeout": <%= uchiwa_site_timeout %>
    }
  ],
  "uchiwa": {
    "port": <%= @uchiwa_port %>,
    "stats": <%= @uchiwa_stats %>,
<% if @uchiwa_admins != {} or @uchiwa_users != {} -%>
    "users": [
<% if @uchiwa_admins != {} -%>
<% @uchiwa_admins.each_with_index do |userdata, i| -%>
      {
        "username" : "<%= userdata[0] %>",
        "password": "<%= userdata[1] %>",
        "role": {
          "readonly": false
        }
      }<%= ',' if i < (uchiwa_admins.size - 1) or uchiwa_users.size > 0 %>
<% end -%>
<% end -%>
<% if @uchiwa_users != {} -%>
<% @uchiwa_users.each_with_index do |userdata, i| -%>
      {
        "username" : "<%= userdata[0] %>",
        "password": "<%= userdata[1] %>",
        "role": {
          "readonly": true
        }
      }<%= ',' if i < (uchiwa_users.size - 1) %>
<% end -%>
<% end -%>
    ],
<% end -%>
    "refresh": <%= uchiwa_refresh %>
  }
}
